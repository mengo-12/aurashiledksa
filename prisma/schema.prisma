datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trainee {
  id        String   @id @default(cuid())   
  name      String   @db.VarChar(255)       
  phone     String   @unique @db.VarChar(20)      
  age       Int                              
  agreed    Boolean  @default(false)         
  hasSeenInstructions Boolean @default(false)
  createdAt DateTime @default(now())         
  
  trainingResults TrainingResult[]
}


model TrainingResult {
  id            String   @id @default(cuid())
  traineeId     String   @unique 
  trainee       Trainee  @relation(fields: [traineeId], references: [id])
  trainingTime  String
  sleepHours    String
  readiness     String
  fieldType     String
  fieldOther    String?
  effortLevel   String
  bodyFeeling   String
  temperature   Float    @default(0)   
  humidity      Float    @default(0)
  city          String   @default("غير محدد")
  condition     String   @default("غير معروف")
  createdAt     DateTime @default(now())
}

model User {
  id       String   @id @default(cuid())
  name     String
  email    String   @unique
  password String
  role     String   @default("user")  
  createdAt DateTime @default(now())
}